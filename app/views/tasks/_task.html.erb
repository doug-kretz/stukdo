<div class="panel panel-info">
	<div class="panel-heading">
		<%= link_to edit_task_path(task) do %>
		Created <%= time_ago_in_words(task.created_at) %>
		<% end %>

		<%= link_to "x", task_path(task), method: :delete, data: {confirm: "Are you sure?"},class: "pull-right" %>
	</div>
	<div class="panel-body"><%=raw(task.content_html) %></div>
	
	<div class="panel-footer">
		<% if task.state == "In Progress" %>
		<div class="btn-group btn-group-justified">
		<%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "To Do"), method: :put, class: "btn btn-info btn-md btn-block"  %> 
		<%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "Completed"), method: :put, class: "btn btn-info btn-md btn-block" %> 
	</div>
		<% elsif task.state == "Completed"%>
		<%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "In Progress"), method: :put, class: "btn btn-info btn-md btn-block"  %> 
		<%else %>
		 <%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "In Progress"), method: :put, class: "btn btn-info btn-md btn-block"   %> 

		<%end %>

	</div>
</div>